using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class pMovement : MonoBehaviour
{
    Rigidbody rb;
    float horizontalInput;
    public LayerMask m_LayerMask;
    bool isGrounded1;
    bool isGrounded2;

    void Start()
    {
        rb = GetComponent<Rigidbody>();
    }


    void Update()
    {
        //check if the first ground check is true
        if (Physics.Raycast(transform.position + transform.right * 0.5f, -Vector3.up, 0.7f))
        {
            isGrounded1 = true;
        } else isGrounded1 = false;

        //check if the second ground check is true
        if (Physics.Raycast(transform.position + transform.right * 0.5f * -1, -Vector3.up, 0.7f))
        {
            isGrounded2 = true;
        } else isGrounded2 = false;

        //what to do when grounded
        if (isGrounded1 || isGrounded2 == true)
        {
            if (Input.GetKeyDown(KeyCode.Space) || Input.GetKeyDown(KeyCode.UpArrow))
            {
                Jump();
            }

            Move();
        } 

        else
        {
            horizontalInput = 0.75f * (Input.GetAxis("Horizontal"));
            AirStrafe();
        }
    }

    void Jump()
    {
        rb.AddForce(Vector3.up * 500);
    }

    void Move()
    {
        horizontalInput = Input.GetAxis("Horizontal");
        rb.velocity = new Vector3(horizontalInput * 5, rb.velocity.y, 0);
    }

    void AirStrafe()
    {
        horizontalInput = 0.75f * Input.GetAxis("Horizontal");
        rb.velocity = new Vector3(horizontalInput * 5, rb.velocity.y, 0);
    }


    
}
